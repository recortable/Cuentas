<% div_for account do %>
  <h2><%= link_to account.name, [account, :months] %> <%= link_to 'ஐ', [:edit, account] %></h2>
  <div class="users">
    <% account.users.each do |user| %><%= content_tag :span, user.name, :class => 'user' %>&nbsp;<% end %>
  </div>
  <p class="ammount"><label >Número: </label><%= account.complete_number %></p>
  <p><label>Propietario: </label><%= account.owner %></p>
  <p><label>Dirección: </label><%= account.owner_address %></p>
  <p><label>BIC: </label><%= account.bic %></p>
  <p><label>IBAN: </label><%= account.iban %></p>
<% end %>