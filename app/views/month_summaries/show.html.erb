<%= title t('.title', :month => mes(@summary.begin_date.month)) %>
<%= render 'accounts/info', :object => @account %>
<h2>Desde el <%= @summary.begin_date.mday %> de <%= mes @summary.begin_date.month %> de <%= @summary.begin_date.year %>
  (<%= euros @summary.before_ammount %>)</h2>
<h2>Hasta el <%= @summary.end_date.mday %> de <%= mes @summary.end_date.month %> de <%= @summary.end_date.year %>
  (<%= euros @summary.after_balance %>)</h2>
<h2>Balance: <%= euros @summary.balance %></h2>

<%= render :partial => 'movements/movements', :object => @summary.movements %>