<!DOCTYPE html>
<html>
<head>
  <title><%= yield :title %> - Cuentas</title>
  <%= csrf_meta_tag %>
  <link rel="shortcut icon" href="/cezanne.ico">
  <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <link rel="stylesheet/less" type="text/css" href="/stylesheets/cuentas.less">
  <script src="/javascripts/less-1.0.41.min.js" type="text/javascript">
  </script>
</head>
<body>
<div id="user_bar">
  <h1><a href="/">Cuentasapp</a></h1>

  <div id="info">
  </div>
  <% if current_user %>
    <div id="session">
      <h1><%= current_user.name %></h1>
      <% current_user.accounts.each do |account| %><%= link_to account.name, account %>
      <% end %>
    </div>

  <% end %>
</div>
<div id="center">
  <div class="column-1">
    <%= yield %>
  </div>
  <div id="info"></div>
</div>
<div id="tools"></div>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js">
</script>
<script type="text/javascript">
  !window.jQuery && document.write('<script src="/javascripts/jquery-1.4.4.min.js"><\/script>')
</script>
<%= javascript_include_tag 'plugins.js', 'scripts.js' %>
</body>
</html>
