<!DOCTYPE html>
<html>
    <head>
        <title><%= yield :title %> - Cuentas</title>
        <%= javascript_include_tag :defaults %>
        <%= csrf_meta_tag %>
        <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
        <link rel="stylesheet/less" type="text/css" href="/stylesheets/cuentas.less">
        <script src="/javascripts/less-1.0.41.min.js" type="text/javascript">
        </script>
    </head>
    <body>
        <div id="header">
          <h1>Cuentasapp</h1>
            <div id="info">
            </div>
            <div id="session">
                <% if current_user %>
                Eres: <%= current_user.name %> <%= link_to 'Salir', logout_path %>
                <% else %>
                <%= link_to 'Identificarse', login_path %>
                <% end %>
            </div>
        </div>
        <div class="container center">
            <%= yield %>
        </div>
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js">
        </script>
        <script type="text/javascript">
!window.jQuery && document.write('<script src="/javascripts/jquery-1.4.4.min.js"><\/script>')
        </script>
        <%= javascript_include_tag 'plugins.js', 'application.js' %>
    </body>
</html>
